{
  "ConnectionStrings": {
    "Database": "Host=localhost;Port=5432;Database=garagge-db-tests;Username=postgres;Password=postgres;Include Error Detail=true;Pooling=false"
  },
  "DatabaseSettings": {
    "RecreateOnStartup": true,
    "SeedTestData": true,
    "EnableSensitiveDataLogging": true
  },
  "Cors": {
    "AllowedOrigins": ["*"],
    "AllowedMethods": ["*"],
    "AllowedHeaders": ["*"]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Microsoft.AspNetCore": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Warning",
          "outputTemplate": "[{Level:u3}] {Message:lj}{NewLine}"
        }
      }
    ]
  },
  "Jwt": {
    "Issuer": "garagge-api-test",
    "Audience": "garagge-web-test",
    "Secret": "test-secret-key-for-integration-tests-minimum-32-chars-long",
    "ExpirationInMinutes": 5
  },
  "TestSettings": {
    "ParallelExecution": false,
    "IsolatedTransactions": true,
    "ResetDatabaseBetweenTests": false
  }
}